{
    "name": "netflix-clone-ult",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "firebase": "^8.4.1",
        "fuse.js": "^6.4.6",
        "normalize.css": "^8.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "styled-components": "^5.2.3",
        "web-vitals": "^1.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --coverage --watchAll",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.jsx",
            "!<rootDir>/src/app.jsx",
            "!<rootDir>/src/helpers/routes.jsx",
            "!<rootDir>/src/index.jsx",
            "!<rootDir>/src/seed.jsx",
            "!<rootDir>/src/utils/index.jsx",
            "!<rootDir>/src/pages/index.jsx",
            "!<rootDir>/src/global-styles.jsx",
            "!<rootDir>/src/components/index.jsx",
            "!<rootDir>/src/firebase.prod.jsx",
            "!<rootDir>/src/hooks/*.jsx",
            "!<rootDir>/src/context/*.jsx"
        ]
    },
    "coverageThreshold": {
        "global": {
            "branches": 90,
            "functions": 90,
            "lines": 90,
            "statements": 90
        }
    },
    "coverageReporters": [
        "html",
        "text"
    ],
    "devDependencies": {
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.6",
        "@testing-library/user-event": "^12.8.3"
    }
}